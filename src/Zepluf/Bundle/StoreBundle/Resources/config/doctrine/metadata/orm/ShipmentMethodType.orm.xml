<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ShipmentMethodType" table="shipment_method_type">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="false"/>
    <field name="description" type="string" column="description" length="255" nullable="true"/>
    <many-to-many field="carrier" target-entity="Carrier" inversed-by="shipmentMethodType">
      <join-table name="carrier_shipment_method">
        <join-columns>
          <join-column name="shipment_method_type_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="carrier_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
