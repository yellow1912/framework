<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- shipment -->
        <parameter key="storebundle.shipment.class">Zepluf\Bundle\StoreBundle\Component\Shipment\Shipment</parameter>
        <parameter key="storebundle.shipping_methods.class">Zepluf\Bundle\StoreBundle\Component\Shipment\ShippingMethods</parameter>
        <!-- shipping method -->
        <parameter key="storebundle.shipping_methods.freeshipping.class">Zepluf\Bundle\StoreBundle\Component\Shipment\Method\FreeShipping</parameter>
    </parameters>

    <services>
        <!-- shipment -->
        <service id="storebundle.shipment" class="%storebundle.shipment.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
        <service id="storebundle.shipping_methods" class="%storebundle.shipping_methods.class%"/>

        <!-- shipping methods -->
        <service id="storebundle.shipping_methods.freeshipping" class="%storebundle.shipping_methods.freeshipping.class%">
            <tag name="storebundle.shipping_methods.methods" alias="freeshipping" />
        </service>
    </services>
</container>